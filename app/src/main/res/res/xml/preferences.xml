<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Preference
        android:key="setting_update"
        android:title="检查更新"/>
    <Preference
        android:key="setting_theme"
        android:title="换肤"/>

    <PreferenceCategory
        android:title="个人信息">

        <EditTextPreference
            android:dialogTitle="edittext_preference"
            android:key="edittext_preference"
            android:summary="edittext_preference"
            android:title="edittext_preference"/>

        <ListPreference
            android:dialogTitle="list_preference"
            android:key="list_preference"
            android:summary="list_preference"
            android:title="list_preference"/>
        <!--android:entries="@array/entries_list_preference"-->
        <!--android:entryValues="@array/entryvalues_list_preference"-->

    </PreferenceCategory>

    <PreferenceCategory
        android:title="333">

        <!-- This PreferenceScreen tag serves as a screen break (similar to page break
             in word processing). Like for other preference types, we assign a key
             here so it is able to save and restore its instance state. -->
        <PreferenceScreen
            android:key="screen_preference"
            android:summary="screen_preference"
            android:title="screen_preference">

            <!-- You can place more preferences here that will be shown on the next screen. -->

            <CheckBoxPreference
                android:key="next_screen_checkbox_preference"
                android:summary="next_screen_checkbox_preference"
                android:title="next_screen_checkbox_preference"/>

        </PreferenceScreen>

        <PreferenceScreen
            android:summary="444"
            android:title="444">

            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://www.android.com"/>

        </PreferenceScreen>

    </PreferenceCategory>

    <PreferenceCategory
        android:title="555">

        <CheckBoxPreference
            android:key="parent_checkbox_preference"
            android:summary="parent_checkbox_preference"
            android:title="parent_checkbox_preference"/>

        <!-- The visual style of a child is defined by this styled theme attribute. -->
        <CheckBoxPreference
            android:dependency="parent_checkbox_preference"
            android:key="child_checkbox_preference"
            android:layout="?android:attr/preferenceLayoutChild"
            android:summary="child_checkbox_preference"
            android:title="child_checkbox_preference"/>

    </PreferenceCategory>

</PreferenceScreen>